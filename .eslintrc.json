{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "describe": false,
        "it": false,
        "expect": false
    },
    "rules": {
        "quotes": 0,
        "semi": [
            "error",
            "never"
        ],
        "no-console": 0,
        "no-extra-boolean-cast": 0,
        "no-unused-vars": "off"
    }
}